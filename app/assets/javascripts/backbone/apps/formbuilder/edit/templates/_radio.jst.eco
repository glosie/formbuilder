<div class="large-8 columns">
    <label><%= @name %></label>
    <% options = @options.split("\n") %>
    <% for option in options: %>
    <label class="subheader"><input type="radio" name="<%= @id %>" id="<%= @slugify("#{@name}-#{options.indexOf(option)}") %>"><%= option %></label>
    <% end %>
</div>
<div class="field-delete">
    <i class="general-enclosed foundicon-remove"></i>
</div>
<div class="field-edit">
    <i class="general-enclosed foundicon-settings"></i>
</div>